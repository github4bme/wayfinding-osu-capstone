<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/abc_action_bar_default_padding_material"
    tools:context="com.osucse.wayfinding_osu_capstone.Settings"
    android:baselineAligned="false"
    android:clickable="false">

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_item_height"
        android:text="@string/setting_item_accessible"
        android:id="@+id/settings_switch_accessible"
        android:splitTrack="false"
        android:showText="false"
        android:onClick="accessibleSwitchStateChange" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_item_height"
        android:text="@string/setting_item_visual"
        android:id="@+id/settings_switch_visual"
        android:splitTrack="false"
        android:showText="false"
        android:onClick="visualSwitchStateChange" />

</LinearLayout>
