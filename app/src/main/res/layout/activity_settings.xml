<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <!-- Put what you want as your normal screen in here, you can also choose for a linear layout or any other layout, whatever you prefer -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="@dimen/abc_action_bar_default_padding_material"
            tools:context="com.osucse.wayfinding_osu_capstone.Settings"
            android:baselineAligned="false"
            android:clickable="false">

            <Switch
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:text="@string/setting_item_accessible"
                android:id="@+id/settings_switch_accessible"
                android:splitTrack="false"
                android:showText="false" />

            <Switch
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:text="@string/setting_item_visual"
                android:id="@+id/settings_switch_visual"
                android:splitTrack="false"
                android:showText="false" />

        </LinearLayout>
    </FrameLayout>
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#eaebeb"/>
</android.support.v4.widget.DrawerLayout>

